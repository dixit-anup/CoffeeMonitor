<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="listener" class="uk.org.tubs.coffee.impl.XMPPCoffeeListener">
		<property name="xmppServer" value="scooge.local" />
		<property name="username" value="coffee" />
		<property name="password" value="c0ff33" />
	</bean>

	<bean id="monitor" class="uk.org.tubs.coffee.impl.SerialMonitor">
		<constructor-arg value="/dev/tty.usbserial-A6008IN1" />
	</bean>

	<bean
		class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
		<property name="targetObject" ref="monitor" />
		<property name="targetMethod" value="addCoffeeListener" />
		<property name="arguments" ref="listener" />
	</bean>

</beans>